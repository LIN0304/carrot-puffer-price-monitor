{
  "name": "carrot-puffer-price-monitor",
  "version": "1.0.0",
  "description": "A monitoring tool that tracks Carrot and Puffer cryptocurrency prices and sends alerts when Carrot trades below 55% of Puffer's price",
  "main": "carrot-puffer-monitor.js",
  "scripts": {
    "start": "node carrot-puffer-monitor.js",
    "start:cmc": "node carrot-puffer-monitor-coinmarketcap.js",
    "start:cmc:frequent": "node carrot-puffer-monitor-coinmarketcap.js --notify-interval 5",
    "start:cmc:medium": "node carrot-puffer-monitor-coinmarketcap.js --notify-interval 15",
    "start:cmc:hourly": "node carrot-puffer-monitor-coinmarketcap.js --notify-interval 60"
  },
  "keywords": [
    "cryptocurrency",
    "price-monitor",
    "carrot",
    "puffer",
    "telegram-bot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.8"
  }
}